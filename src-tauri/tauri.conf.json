{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Discord Bot Engine",
  "version": "0.1.0",
  "identifier": "com.discord-bot-engine.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Discord Bot Engine",
        "width": 1000,
        "height": 625
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    }
  },
  "bundle": {
    "icon": [
      "icons/dbe.png",
      "icons/dbe.icns",
      "icons/dbe.ico"
    ]
  }
}

