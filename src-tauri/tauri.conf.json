{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Discord Bot Engine",
  "version": "0.1.0",
  "identifier": "com.discord-bot-engine.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Discord Bot Engine",
        "width": 1000,
        "height": 625
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "dmg",
      "deb",
      "appimage"
    ],
    "resources": [
      "resources/Bot",
      "resources/sftp/sftp-win.exe",
      "resources/sftp/sftp-linux",
      "resources/sftp/sftp-macos-arm64",
      "resources/sftp/sftp-macos-x64",
      "resources/nodejs",
      "resources/node-macos-x64",
      "resources/node-macos-arm64",
      "resources/node-linux-x64"
    ],
    "icon": [
      "icons/dbe.ico"
    ],
    "licenseFile": "../LICENSE",
    "license": "Proprietary"
  },
  "windows": {
    "bundle": {
      "resources": [
        "resources/Bot",
        "resources/sftp/sftp-win.exe",
        "resources/nodejs"
      ]
    }
  },
  "macOS": {
    "bundle": {
      "resources": [
        "resources/Bot",
        "resources/sftp/sftp-macos-x64",
        "resources/sftp/sftp-macos-arm64",
        "resources/node-macos-x64",
        "resources/node-macos-arm64"
      ]
    }
  },
  "linux": {
    "bundle": {
      "resources": [
        "resources/Bot",
        "resources/sftp/sftp-linux",
        "resources/node-linux-x64"
      ]
    }
  }
}
